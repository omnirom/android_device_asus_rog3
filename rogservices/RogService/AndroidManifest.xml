<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.omnirom.rogservice"
    android:sharedUserId="android.uid.system">

    <!-- For miscellaneous settings -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="com.asus.permission.MANAGE_AURA_LIGHT" />
    <uses-permission android:name="com.asus.permission.CUSTOMIZE_AURA_LIGHT" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_PROFILES" />
    <permission android:name="com.asus.permission.CUSTOMIZE_AURA_LIGHT" android:protectionLevel="normal"/>
    <permission android:name="com.asus.permission.MANAGE_AURA_LIGHT" android:protectionLevel="privileged|signature"/>

    <protected-broadcast android:name="asus.intent.action.GAME_DND_CUSTOM_ACTIVITY"/>
    <protected-broadcast android:name="asus.intent.action.GAME_DND_OVERLAY_WINDOW"/>
    <protected-broadcast android:name="asus.intent.action.NOTIFY_CALL_TO_SCREEN_RECORDER"/>
    <protected-broadcast android:name="asus.intent.action.AURA_LIGHT_CHANGED"/>
    <protected-broadcast android:name="asus.intent.action.AURA_FRAME_CHANGED"/>
    <protected-broadcast android:name="asus.intent.action.AURA_SETTING_CHANGED"/>
    <protected-broadcast android:name="asus.rog.intent.action.BUMPER_STATE_CHANGED"/>
    <protected-broadcast android:name="asus.rog.intent.action.NFC_MODE_CHANGED"/>
    <protected-broadcast android:name="asus.intent.action.MSG_AURA_LIGHT_CHANGE"/>
    <protected-broadcast android:name="AuraLightService.SYNC"/>

    <application
        android:label="@string/app_name" >

        <receiver android:name="Startup"
                  android:exported="true" >
            <intent-filter android:priority="100" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="org.omnirom.rogservice.OmniRogService"
                 android:exported="true"
                 android:permission="ROGHelperService">
        </service>

        <service android:name="org.omnirom.rogservice.OmniAuraLightService"
                 android:exported="true"
                 android:permission="AuraLightHelperService">
        </service>

        <service android:name="org.omnirom.rogservice.game.OmniGameModeService"
                 android:exported="true"
                 android:permission="GameModeHelperService">
        </service>
    </application>

</manifest>
